<div class ="box-container">
  <div class="row">
    <% @posts.each do |post| %>
      <div class ="col m4 l4">
        <div class="box">
          <a class="modal-trigger" href="#<%=post.id%>"><img class="image" src="<%= post.image_url %>"></a>
            <!-- Modal Structure -->
              <div id="<%=post.id%>" class="modal">
                <div class="modal-content">
                  <img class="modal-image" src="<%= post.image_url %>">
                  <%= post.title %>
                  <%= post.content %>
                </div>
                <div class="modal-footer">
                  <%= link_to 'Edit', edit_post_path(post) %>
                  <%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %>
                </div>
              </div>
            <!-- Modal Structure ends -->
        </div>
      </div>
    <% end %>
  </div>
</div>


<style>
  .box-container {
   text-align: center;
  }

  .box {
    display: inline-block;
    height: 300px;
    width: 300px;
    background-color: white;
    border-radius: 3px;
    border-color: #E6E6E6;
    border-style: solid;
    border-width: 1px;
    margin-bottom: 30px;
  }

  .box .image {
    width: 100%;
    height: 100%;
    margin-bottom: 1em;
  }

  .modal-image {
    max-width: 100%;
  }
</style>
